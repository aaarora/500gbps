#!/bin/bash

numTransfer="10"
count="0"
for pod in $(kubectl --kubeconfig ~/config1 -n osg-gil get pods -l k8s-app="xrootd-server-gc" --output=jsonpath={.items..metadata.name});
do
    kubectl --kubeconfig ~/config1 exec $pod -n osg-gil -- bash /home/makeFile $count $numTransfer &
    count=$[$count+$numTransfer]
done
